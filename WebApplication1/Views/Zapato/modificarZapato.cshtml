@using CalzadosBadajoz.Modelo
@{
    ViewBag.Title = "modificarZapato";
    Layout = "~/Views/Plantilla/Plantilla.cshtml";
    TZapato zapato = Model[0];
}

<h3 style="margin-bottom: 25px; text-align: center;">Modificar Zapato</h3>


<div class="container">
    <div class="col-md-10">
        <div class="form-area">
            <form class="form" method="post">
                <img border="1" alt="Imagen" src=@zapato.Imagen width="150" height="150">
                <div class="form-group">
                    <label for="titulo">Nombre</label>
                    <input name="Nombre" type="text" maxlength="30" required="" class="form-control" placeholder="Nombre" id="nombre" value="@zapato.Nombre" />
                </div>
                <div class="form-group">
                    <label for="autor">Marca</label>
                    <input name="Marca" type="text" maxlength="30" minlength="5" required="" class="form-control" placeholder="marca" id="marca" value="@zapato.Marca" />
                </div>
                <div class="form-group">
                    <label for="precio">Precio</label>
                    <input name="Precio" type="text" required="" class="form-control" placeholder="Precio" id="precio" value="@zapato.Precio" />
                </div>
                <div class="form-group">
                    <label for="imagen">Imagen</label>
                    <input name="Imagen" type="text" required="" class="form-control" placeholder="Imagen" id="imagen" value="@zapato.Imagen" />
                </div>
                <fieldset class="form-group">
                    <legend>Formato:</legend>
                    <input type="checkbox" name="Formatouno" value="Vinilo" @(zapato.Formatouno == "N/A" ? "" : "checked") />Piel<br>
                    <input type="checkbox" name="Formatodos" value="CD" @(zapato.Formatodos == "N/A" ? "" : "checked") />Goma<br>
                    <input type="checkbox" name="Formatotres" value="Digipack" @(zapato.Formatotres == "N/A" ? "" : "checked") />Cuero<br>
                </fieldset>
                <fieldset class="form-group">
                    <legend>Estado: </legend>
                    <input type="radio" name="Estado" value="Novedad" @(zapato.Estado == "Disponible" ? "checked" : "") />Disponible<br />
                    <input type="radio" name="Estado" value="Reedición" @(zapato.Estado == "Agotado" ? "checked" : "") />Agotado<br />
                </fieldset>
                <br>
                <div class="submit">
                    <input type="submit" value="Modificar Datos" class="btn btn-primary pull-right" id="button-blue" />
                    <div class="ease"></div>
                </div>
                <br>
            </form>
        </div>
    </div>
</div>








